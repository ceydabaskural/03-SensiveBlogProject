 @model Article

<div class="main_blog_details">
    <img class="img-fluid" src="@Model.CoverImageUrl" width="900" height="420" alt="">
    <a href="#"><h4>@Model.Title</h4></a>
    <div class="user_details">
        <div class="float-left">
            <a href="#">@Model.Category.CategoryName</a>
        </div>
        <div class="float-right mt-sm-0 mt-3">
            <div class="media">
                <div class="media-body">
                    <h5>@Model.AppUser.Name @Model.AppUser.Surname</h5>
                    <p>@Model.CreatedDate.ToShortDateString()</p>
                </div>
                <div class="d-flex">
                    <img width="42" height="42" src="@Model.AppUser.ImageUrl" alt="">
                </div>
            </div>
        </div>
    </div>
    <blockquote class="blockquote">
        <p class="mb-0">@Model.Description</p>
    </blockquote>
    <div class="news_d_footer flex-column flex-sm-row">
        <a  href="#"><span class="align-middle mr-2"><i class="ti-themify-favicon"></i></span>@Model.Comments.Count()</a>
        <div class="news_socail ml-sm-auto mt-sm-0 mt-2">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-dribbble"></i></a>
            <a href="#"><i class="fab fa-behance"></i></a>
        </div>
    </div>
</div>
<hr />
<div class="navigation-area">
    <h4 class="author-title" style="margin-bottom: 30px; margin-top:-50px">Yazar Hakkında</h4>
    <div class="row">
        <div class="col-lg-4 col-md-6 col-12 nav-left flex-row d-flex justify-content-start align-items-center">
            <div class="thumb">
                <a href="#"><img width="42" height="42" class="img-fluid" src="@Model.AppUser.ImageUrl" alt=""></a>
            </div>
            <div class="detials">
                <p>@Model.AppUser.UserName</p>
                <a href="#"><h4>@Model.AppUser.Name @Model.AppUser.Surname</h4></a>
            </div>
        </div>
        <div class="col-lg-8 col-md-6 col-12 align-items-center">
            <div class="detials">
                <p>@Model.AppUser.Description</p>
            </div>
        </div>
    </div>
</div>

