@model Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Author/Views/Shared/_AuthorLayout.cshtml";
}

<div class="container mt-5">
    <div class="form-container">
        <form method="post">
            <div class="mb-3">
                <input type="hidden" asp-for="CategoryId" />
                <label for="name" class="form-label">Kategori Güncelle</label>
                <input type="text" style="width:300px" class="form-control" asp-for="CategoryName" placeholder="Kategoriyi giriniz.">
            </div>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</div>


