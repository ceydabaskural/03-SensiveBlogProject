@model Article
@{
    ViewData["Title"] = "UpdateArticle";
    Layout = "~/Areas/Author/Views/Shared/_AuthorLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Yazıyı Güncelle</h2>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="row column1">
            <div class="col-md-12" style="max-width: 100%;">
                <div class="white_shd full margin_bottom_30">
                    <div class="full price_table padding_infor_info">
                        <form method="post">
                            <div class="row">
                                <!-- user profile section -->
                                <!-- profile image -->
                                <div class="col-lg-12">

                                    <!-- profile contant section -->
                                    <div class="full inner_elements margin_top_10">
                                        <div class="tab_style2">
                                            <div class="tabbar">

                                                <div class="tab-content" id="nav-tabContent">
                                                    <div class="tab-pane fade show active" id="recent_activity" role="tabpanel" aria-labelledby="nav-home-tab">
                                                        <div class="msg_list_main">


                                                            <div class="container">
                                                                <input type="hidden" asp-for="ArticleId" />
                                                                <label>Başlık</label>
                                                                <input type="text" asp-for="Title" class="form-control" required />
                                                                <br />
                                                                <label>Foto Url</label>
                                                                <input type="text" asp-for="CoverImageUrl" class="form-control" required />
                                                                <br />
                                                                <label>Oluşturulma Tarihi</label>
                                                                <input type="datetime" asp-for="CreatedDate" class="form-control" readonly />
                                                                <br />
                                                                <label for="CategoryId">Kategori</label>
                                                                <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.CategoryList">
                                                                    <option value="">Kategori Seçin</option>
                                                                </select>
                                                                <br />
                                                                <label>İçerik</label>
                                                                <textarea rows="20" asp-for="Description" class="form-control" required></textarea>
                                                                <button style="margin-top:6px" class="btn btn-success">Güncelle</button>
                                                            </div>

                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- end user profile section -->
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 100%;
        padding-left: 15px;
        padding-right: 15px;
    }

    .form-control {
        width: 100%; /* Genişliği %100 yaparak container içinde kalmasını sağlıyoruz */
        box-sizing: border-box; /* Padding'in genişlik üzerinde etkisi olmasın */
    }
</style>